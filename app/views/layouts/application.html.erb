<!DOCTYPE html>
<html>
  <head>
    <title>MAC</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav class="navbar navbar-default navbar-fixed-top login-logout-top">
      <div class="container">
        <div class="col-md-12">
          <a class="navbar-brand" href="#">
            <%=  image_tag("mac-logo-bw.png", size: "120", alt: "MAC logo", id: "logo-link") %>
          </a>
          <% if current_user %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-inverted navbar-btn pull-right' %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: 'btn btn-primary btn-inverted navbar-btn pull-right' %>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="page container">
      <%= yield %>
    </div>

  </body>
</html>
