<h1>Volunteers List</h1>
<div class="container">
<div class="row" style="margin-bottom: 20px; text-align:right">
  <%= link_to new_volunteer_path, class: "btn btn-primary" do %>
    New Volunteer
  <% end %>
</div>

<div class="row">
<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th colspan="1">First Name</th>
    <th colspan="1">Last Name</th>
    <th colspan="1">On Call</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  <% unless @volunteers.empty? %>
    <% @volunteers.each do |volunteer| %>
    	<tr>
      <td><%= volunteer.user.try(:first_name) %></td>
      <td><%= volunteer.user.try(:last_name) %></td>
      <td><%= volunteer.on_call ? 'Yes' : 'No' %></td>
      <td>
        <%= link_to(edit_volunteer_path(volunteer), class: "btn btn-small") do %>
          Edit
        <% end %>
        <%= link_to(volunteer_path(volunteer), class: "btn btn-info") do %>
          View
        <% end %>
        <%= link_to(volunteer, class: "btn btn-small btn-danger", method: :delete)  do %>
          Destroy
        <% end %>
      </td>
      </tr>
  <% end %>
<tr>
  <% else %>
    <td>Move along nothing to see here<td>
  <% end %>
</tr>
</tbody>                                        
</table>
</div>
</div>