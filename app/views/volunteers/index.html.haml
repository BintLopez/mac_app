%h1 Potential Volunteers
.row
%table.table.table-striped.table-bordered.table-condensed
  %thead
  %tr
    %th{:colspan => "1"} First Name
    %th{:colspan => "1"} Last Name
    %th{:colspan => "1"} Email
    %th{:colspan => "1"} Interested In
    %th Actions
  %tbody
    - unless @potential_volunteers.empty?
      - @potential_volunteers.each do |volunteer|
        %tr
          %td= volunteer.first_name
          %td= volunteer.last_name
          %td= volunteer.email
          %td= volunteer.interested_in
          %td
            = link_to(edit_volunteer_path(volunteer), class: "btn btn-small") do
              Edit
            = link_to(volunteer_path(volunteer), class: "btn btn-info") do
              View
            = link_to(volunteer, class: "btn btn-small btn-danger", method: :delete)  do
              Delete
.row
%h1 Volunteers
%table.table.table-striped.table-bordered.table-condensed
  %thead
  %tr
    %th{:colspan => "1"} First Name
    %th{:colspan => "1"} Last Name
    %th{:colspan => "1"} Capacity
    %th{:colspan => "1"} On Call
    %th Actions
  %tbody
    - unless @volunteers.empty?
      - @volunteers.each do |volunteer|
        %tr
          %td= volunteer.user.try(:first_name)
          %td= volunteer.user.try(:last_name)
          %td= volunteer.capacity
          %td= volunteer.on_call ? 'Yes' : 'No'
          %td
            = link_to(edit_volunteer_path(volunteer), class: "btn btn-small") do
              Edit
            = link_to(volunteer_path(volunteer), class: "btn btn-info") do
              View
            = link_to(volunteer, class: "btn btn-small btn-danger", method: :delete)  do
              Delete
