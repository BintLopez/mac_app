<div class="container">
  <div class="row">
  <h1>Volunteer Details</h1>
  <!-- Table -->
  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <td>First Name</td>
      <td><%= @volunteer_data[:first_name] %></td>
    </tr>

    <tr>
      <td>Last Name</td>
      <td><%= @volunteer_data[:last_name] %></td>
    </tr>

    <tr>
      <td>Email</td>
      <td><%= @volunteer_data[:email] %></td>
    </tr>

	  <tr>
	    <td>Address</td>
	    <td><%= @volunteer_data[:address_line_1] %></td>
	  </tr>

		<tr>
		  <td>Address 2</td>
		  <td><%= @volunteer_data[:address_line_2] || '' %></td>
		</tr>

		<tr>
		  <td>City</td>
		  <td><%= @volunteer_data[:city] %></td>
		</tr>

		<tr>
		  <td>City</td>
		  <td><%= @volunteer_data[:state] %></td>
		</tr>

		<tr>
		  <td>Zip Code</td>
		  <td><%= @volunteer_data[:zip_code] %></td>
		</tr>

		<tr>
		  <td>Gender</td>
		  <td><%= @volunteer_data[:gender] %></td>
		</tr>

		<tr>
		  <td>Role</td>
		  <td><%= @volunteer_data[:role] %></td>
		</tr>

		<tr>
		  <td>On-Call</td>
		  <td><%= @volunteer_data[:on_call] %></td>
		</tr>
  </table>
  </div>
  <div class="row">
    <h1> Schedule </h1>
    <p> Schedule info here! </p>
  </div>
  <div class="row">
    <h1> Training Material </h1>
    <p> Training material here! </p>
  </div>
</div>
<br/>
<div class="row" style="text-align:center">
  <%= link_to(edit_volunteer_path(@volunteer), class: "btn btn-info") do %>
    Edit
  <% end %>
  <%= link_to home_portal_path, class: "btn btn-primary" do %>
    Portal
  <% end %>
</div>
